	padding: 8px 16px;
}

.beae-ajax-cart-text-area::placeholder {
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 20px;
	text-align: left;
	color: #6B7280;
}

.beae-line-item-blink {
	background: #ccc;
	animation: beaeBlink 1s;
	animation-iteration-count: 3;
}

.beae-ajax-cart-note-field {
	display: flex;
	flex-direction: column;
	gap: 12px;
}


.beae-ajax-cart-continue-shopping {
		width: 100%;
        display:none
	}


.beae-ajax-cart-note-field {
	margin-bottom: 14px;
}


