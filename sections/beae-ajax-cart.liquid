 
{% style %}
.beae-ajax-cart.beae-popup-cart-custom {
	display: block;
	position: absolute;
	left: 50%;
	transform: translate(-50%,-50%);
	top: 50%;
	width: 100%;
	max-width: 770px;
	margin: auto;
	background: #FFFFFF;
	box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1), 0px 4px 2px rgba(255, 255, 255, 0.06);
	padding: 20px;
	box-sizing: border-box;
	max-height: 800px;
	overflow-y: scroll;
	overflow-x: hidden;
    transition: all .2s ease;
}
.beae-cart-popup::before {
    content: ' ';
    position: absolute;
    background: #000000b3 !important;
    inset: 0;-----
}
.beae-cart-drawer-animation-open .beae-ajax-cart.beae-popup-cart-custom {
    transform: translateX(0);
}
.beae-cart-popup-animation .beae-ajax-cart.beae-popup-cart-custom{
    opacity:0;
    transform: translate(-50%,-50%) scale(0.5);
}
.beae-cart-popup-animation-open.beae-cart-popup-animation .beae-ajax-cart.beae-popup-cart-custom {
    opacity: 1;
    transform: translate(-50%,-50%) scale(1);
}

.beae-ajax-cart::-webkit-scrollbar {
	width: 1px;
}



.beae-ajax-cart-header {
	margin-bottom: 30px;
    position:relative
}

.beae-ajax-cart-header>h3 {
	font-style: normal;
	font-weight: 600;
	font-size: 24px;
	line-height: 32px;
	color: #111827;
	margin: 0px;
}

.beae-ajax-cart-body {
	padding: 32px 0px;
}



.beae-ajax-cart-items::-webkit-scrollbar {
	width: 2px;
}

.beae-ajax-cart-total {
	display: flex;
	gap: 24px;
	align-items: center;
}





.beae-ajax-cart-line-item-dl {
	margin-top: 10px;
}

.beae-ajax-cart-line-item-product-option {
	display: flex;
}

.beae-ajax-cart-line-item-product-option dt {
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 20px;
}

.beae-ajax-cart-line-item-product-option dd {
	margin-left: 5px;
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 20px;
}




span.beae-ajax-cart-visually-hidden {
	display: none;
}
.beae-ajax-cart-line-item-quantity-input-drawer,
.beae-ajax-cart-line-item-quantity-input {
    width: 120px;
    height: 36px;
    text-align: center;
    padding: 0px 40px;
    border: 0;
}
.beae-ajax-cart-line-item-quantity-wrapper {
    position:relative;
    border:1px solid;
    display:flex;
}
.beae-ajax-cart-line-item-quantity-input-drawer::-webkit-inner-spin-button,
.beae-ajax-cart-line-item-quantity-input::-webkit-inner-spin-button {
	-webkit-appearance: none;
	margin: 0;
}
.beae-ajax-cart-line-item-quantity-input-drawer:focus-visible,
.beae-ajax-cart-line-item-quantity-input:focus-visible {
	outline: unset;
	outline-offset: unset;
	box-shadow: unset;
}
.beae-ajax-cart-line-item-quantity {
    display:flex;
    align-items:center
}
.beae-ajax-cart-line-item-quantity-button-drawer,
.beae-ajax-cart-line-item-quantity-button {
    width: 40px;
    max-height: 40px;
    position: absolute;
    top: 0;
    bottom: 0;
    border: 0;
    border-radius: 0;
    background: transparent;
    cursor: pointer;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0px;
    opacity: 1;
    color: black;
    min-height: unset;
}
.beae-ajax-cart-line-item-quantity-button-drawer svg,
.beae-ajax-cart-line-item-quantity-button svg {
    width:12px;
    height: 12px
}
.beae-ajax-cart-line-item-quantity-button-drawer[name="minus"],
.beae-ajax-cart-line-item-quantity-button[name="minus"] {
    left: 0;
    right:auto
}
.beae-ajax-cart-line-item-quantity-button-drawer[name="plus"],
.beae-ajax-cart-line-item-quantity-button[name="plus"] {
    right: 0;
    left:auto
}

.beae-ajax-cart-line-item-price {
	font-style: normal;
	font-size: 16px;
	line-height: 24px;
	color: #111827;
    margin-top:8px
}
.beae-ajax-cart-line-item-title:hover {
    text-decoration: underline;
    text-underline-offset: 0.3rem;
    text-decoration-thickness: 0.2rem;
}


.beae-ajax-cart-line-item-title {
	font-style: normal;
	font-weight: 600;
	font-size: 16px;
	line-height: 20px;
	color: #111827;
	text-decoration: none;
}

.beae-ajax-cart-line-item-details>*:empty {
	display: none;
}

.beae-ajax-cart-line-item-button-remove {
    width: 36px;
    padding: 10px;
    display: inline-grid;
    position: relative;
    color: #000000;
    margin-left: 10px;
}



.beae-ajax-cart-line-item-cart-item-totals {
	display: flex;
	justify-content: space-between;
	gap: 24px;
}

.beae-ajax-cart-line-item-media {
	max-width: 100px;
    min-width:80px;
    padding-right:10px
}



.beae-ajax-cart-line-item-details>* {
	display: block;
	width: 100%;
	margin: 0;
	padding: 0;
}


.beae-ajax-cart-totals__subtotal {
	font-style: normal;
	font-weight: 600;
	font-size: 14px;
	line-height: 20px;
	color: #111827;
	margin: 0;
}

.beae-ajax-cart-totals__subtotal-value {
	margin: 0;
	font-style: normal;
	font-size: 18px;
	line-height: 28px;
}

.beae-ajax-cart-tax-note {
	margin-top: 12px;
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 20px;
	color: #374151;
	display: block;
    text-align:right
}

.beae-ajax-cart-view-details {
	display: block;
	width: 100%;
}

.beae-ajax-cart-view-details-button {
	display: block;
	font-style: normal;
	font-weight: bold;
	font-size: 14px;
	line-height: 20px;
	text-align: center;
	color: #111827;
	padding: 12px 24px;
	background: #FFFFFF;
	border: 2px solid #111827;
	box-sizing: border-box;
	width: 100%;
	text-decoration: none;
}

.beae-ajax-cart-checkout-wrapper {
	display: flex;
	width: 100%;
	margin-top: 12px;
    gap:10px
}

.beae-ajax-cart-continue-shopping-button {
    cursor:pointer;
	background: #111827;
	padding: 12px 24px;
	font-style: normal;
	font-weight: bold;
	font-size: 14px;
	line-height: 20px;
	text-align: center;
	color: #FFFFFF;
	border: none;
	width: 100%;
}

.beae-ajax-cart-continue-shopping-full {
	width: 100%;
}



.beae-ajax-cart-close-button {
	position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: unset;
    border: none;
    cursor: pointer;
    text-decoration: underline;
    text-underline-offset: 0.3rem;
    text-decoration-thickness: 0.1rem;
    transition: text-decoration-thickness ease .1s;
}
.beae-ajax-cart-close-button:hover {
    text-decoration-thickness: 0.2rem;
}

.beae-ajax-cart-text-area {
	background: #F3F4F6;
