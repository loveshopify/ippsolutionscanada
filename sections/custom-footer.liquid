      <a href="{{section.settings.link_two}}" class="footer-link-3"> {{section.settings.link_two_label}}</a>
      <a href="{{section.settings.link_three}}" class="footer-link-3"> {{section.settings.link_three_label}}</a>
      <a href="{{section.settings.link_four}}" class="footer-link-3"> {{section.settings.link_four_label}}</a>
      <a href="{{section.settings.link_five}}" class="footer-link-3"> {{section.settings.link_five_label}}</a>
    </div>
    <div data-w-id="7ce617ec-d939-c9a7-048b-7fd81a04dc4b" class="footer-rights-wrapper-2"
      style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;">
      <div class="footer-copyright-2">Â© <span  class="link-2 w--current">IPP</span>
        {{section.settings.text_8}}</div>
    </div>
  </div>
